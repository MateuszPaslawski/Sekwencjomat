<UserControl x:Class="WPF_Sekwencjomat.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Sekwencjomat"
             mc:Ignorable="d"  FontFamily="Google Sans" FontSize="13"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <GroupBox Margin="5" Header="Opcje Odtwarzania" VerticalAlignment="Top" HorizontalAlignment="Left">
            <UniformGrid x:Name="UniformGrid_PlaybackOrderControl" Margin="10" Columns="2">
                <RadioButton Tag="BitrateAscending" Content="Bitrate Rosnąco"  Margin="10" Style="{DynamicResource RadioButtonStyle_Blank}" VerticalContentAlignment="Center"/>
                <RadioButton Tag="BitrateDescending" Content="Bitrate Malejąco" Margin="10" Style="{DynamicResource RadioButtonStyle_Blank}" VerticalContentAlignment="Center"/>
                <RadioButton Tag="ResolutionAscending" Content="Rozdzielczość Rosnąco" Margin="10" Style="{DynamicResource RadioButtonStyle_Blank}" VerticalContentAlignment="Center"/>
                <RadioButton Tag="ResolutionDescending" Content="Rozdzielczość Malejąco" Margin="10" Style="{DynamicResource RadioButtonStyle_Blank}" VerticalContentAlignment="Center"/>
                <RadioButton Tag="SequentialForRating" Content="Sekwencyjnie do Oceny" IsChecked="True" Margin="10" Style="{DynamicResource RadioButtonStyle_Blank}" VerticalContentAlignment="Center"/>
                <RadioButton Tag="Random" Content="Losowo" Margin="10" Style="{DynamicResource RadioButtonStyle_Blank}" VerticalContentAlignment="Center"/>
            </UniformGrid>
        </GroupBox>

        <GroupBox Margin="5" Grid.Row="1" VerticalAlignment="Top">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="IMG_VLCPathStatus" Margin="5" DockPanel.Dock="Right" Source="/WPF_Sekwencjomat;component/Resources/png/icons8-delete-20.png" Stretch="None"/>
                    <Label Content="Ścieżka programu VLC" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </GroupBox.Header>
            <DockPanel Margin="10" LastChildFill="True">
                <Button Click="Button_Click" Margin="-1,0" Template="{DynamicResource ButtonBaseControlTemplate_Blank}" BorderBrush="#FFABADB3" Background="{x:Null}">
                    <Image Source="/WPF_Sekwencjomat;component/Resources/png/icons8-vlc-24.png" Stretch="None"/>
                </Button>
                <TextBox IsReadOnly="True" MinWidth="200" x:Name="TBX_VLCPath" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </DockPanel>
        </GroupBox>
    </Grid>
</UserControl>
