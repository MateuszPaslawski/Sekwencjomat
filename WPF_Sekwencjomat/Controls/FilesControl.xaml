<UserControl x:Class="WPF_Sekwencjomat.FilesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Sekwencjomat"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Click="Button_Click" Margin="0,5,5,5" Width="Auto" Height="Auto" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" VerticalAlignment="Top" Template="{DynamicResource ButtonBaseControlTemplate_Blank}" Background="#00000000" BorderBrush="{x:Null}">
                <DockPanel Margin="5">
                    <Image Source="/WPF_Sekwencjomat;component/Resources/icons8-add-folder-40.png" HorizontalAlignment="Left" Stretch="None"/>
                    <Label Content="Dodaj Pliki" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </DockPanel>
            </Button>
            <UniformGrid Rows="1">
                <DockPanel Margin="0,5,5,5">
                    <Label Content="Ścieżka do pliku referencyjnego" DockPanel.Dock="Top" Margin="0"/>
                    <Button Template="{DynamicResource ButtonBaseControlTemplate_Blank}" VerticalAlignment="Center" Margin="0" Click="Button_Click_1" Background="White" BorderBrush="#FFABADB3">
                        <Image Source="/WPF_Sekwencjomat;component/Resources/icons8-plus-40.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Stretch="Fill" Height="24" Width="24"/>
                    </Button>
                    <TextBox x:Name="TextBox_RefPath" VerticalAlignment="Center" IsReadOnly="True" Margin="0" Height="28" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </DockPanel>

                <DockPanel Margin="0,5,5,5">
                    <Label Content="Ścieżka do pliku odliczania" DockPanel.Dock="Top" Margin="0"/>
                    <Button Template="{DynamicResource ButtonBaseControlTemplate_Blank}" VerticalAlignment="Center" Margin="0" Click="Button_Click_2" BorderBrush="#FFABADB3" Background="White">
                        <Image Source="/WPF_Sekwencjomat;component/Resources/icons8-plus-40.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Stretch="Fill" Height="24" Width="24"/>
                    </Button>
                    <TextBox x:Name="TextBox_PauserPath" VerticalAlignment="Center" IsReadOnly="True" Margin="0" Height="28" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </DockPanel>
            </UniformGrid>
        </DockPanel>
        <DataGrid x:Name="DG_Main" Grid.Row="1" ScrollViewer.CanContentScroll="True" BeginningEdit="DG_Main_BeginningEdit">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Usuń" Click="MenuItem_Click">
                        <MenuItem.Icon>
                            <Image Source="/WPF_Sekwencjomat;component/Resources/icons8-delete-20.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <!--<DataGridTemplateColumn MaxWidth="40" Header="Ikona">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding FileIcon}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->
                <DataGridTextColumn Binding="{Binding FileName}" Header="Nazwa"/>
                <DataGridTextColumn Binding="{Binding FilePath}" Header="Ścieżka"/>
                <DataGridTextColumn Binding="{Binding FileExtension}" Header="Kontener"/>
                <DataGridTextColumn Binding="{Binding FileBitrate}" Header="Bitrate (kB/s)"/>
                <DataGridTextColumn Binding="{Binding FileSize}" Header="Rozmiar"/>
                <DataGridTextColumn Binding="{Binding FileDuration}" Header="Długość"/>
                <DataGridTextColumn Binding="{Binding FileFPS}" Header="FPS"/>
                <DataGridTextColumn Binding="{Binding FileFrameSize}" Header="Rozdzielczość"/>
                <DataGridTextColumn Binding="{Binding FileFormat}" Header="Format"/>
                <DataGridTextColumn Binding="{Binding FileColorModel}" Header="Profil Koloru"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
