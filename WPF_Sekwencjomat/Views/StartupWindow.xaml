<Window x:Class="WPF_Sekwencjomat.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Sekwencjomat.Views" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="None" Background="White" AllowsTransparency="True"
        Title="StartupWindow" SizeToContent="WidthAndHeight" Topmost="True">
    
    <Border VerticalAlignment="Center" HorizontalAlignment="Center" Background="#66000000" CornerRadius="0">
        <Grid>
            <ProgressBar IsIndeterminate="True" BorderThickness="0" Background="#00000000" />
            <Image Margin="100,0" Source="/WPF_Sekwencjomat;component/Resources/ico/Album/Album.ico" Stretch="None" />
        </Grid>
    </Border>
</Window>
