<Window x:Class="WPF_Sekwencjomat.Views.Dialogs.ACRWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Sekwencjomat.Views.Dialogs"
        mc:Ignorable="d" Background="Transparent"
        Title="ACRWindow" WindowStyle="None" AllowsTransparency="True" Loaded="Window_Loaded"
        WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" ShowInTaskbar="False">
    <Grid Margin="5">
        <Border Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="6" ShadowDepth="2" Color="Black" Opacity="1" Direction="-90"/>
            </Border.Effect>
        </Border>
        <DockPanel>
            <UniformGrid x:Name="UniformGrid_Main" DockPanel.Dock="Top" Margin="5,5" Columns="1">
                <RadioButton Content="5 - Jakość jest wspaniała" IsChecked="True" Style="{StaticResource RadioButtonStyle_Colored}" Background="#008A00"/>
                <RadioButton Content="4 - Jakość jest dobra" Style="{StaticResource RadioButtonStyle_Colored}" Background="#396C00"/>
                <RadioButton Content="3 - Jakość jest znośna" Style="{StaticResource RadioButtonStyle_Colored}" Background="#724F00"/>
                <RadioButton Content="2 - Jakość jest słaba" Style="{StaticResource RadioButtonStyle_Colored}" Background="#AB3100"/>
                <RadioButton Content="1 - Jakość jest zła" Style="{StaticResource RadioButtonStyle_Colored}" Background="#E51400"/>
            </UniformGrid>
            <Button x:Name="Button_Main" DockPanel.Dock="Bottom" VerticalAlignment="Center" Margin="5,0,5,5"
                    Height="80" Template="{DynamicResource ButtonBaseControlTemplate_Blank}"
                    Background="Transparent" BorderThickness="0"
                    Click="Button_Click">
                <Grid>
                    <Image x:Name="Image_Completed" Source="/WPF_Sekwencjomat;component/Resources/png/checkmark-20.png" Stretch="None"/>
                    <Label x:Name="Label_Counter" Content="Counter" Visibility="Collapsed" FontSize="24"/>
                </Grid>
            </Button>
        </DockPanel>
    </Grid>
</Window>
